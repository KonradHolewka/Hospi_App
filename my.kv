WindowManager:
    LoginWindow:
    MainWindow:
    DataWindow:
    RegisterWindow:
    AddMeasurementWindow:
    EditPatientWindow:
    EditMeasurementWindow:
    EditWindow:
    Deletion_conf:

# /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

# login window
<LoginWindow>:
    name: "login_screen"
    login: login
    password: password
    on_enter:
        login.text = ""
        password.text = ""

    FloatLayout:
        Label:
            pos_hint: {"x": 0.3, "top": 0.8}
            size_hint: 0.05, 0.05
            text: "Login: "

        TextInput:
            pos_hint: {"x": 0.4, "top": 0.8}
            size_hint: 0.15, 0.05
            id: login
            multiline: False

        Label:
            pos_hint: {"x": 0.3, "top": 0.7}
            size_hint: 0.05, 0.05
            text: "Password: "

        TextInput:
            pos_hint: {"x": 0.4, "top": 0.7}
            size_hint: 0.15, 0.05
            id: password
            multiline: False
            password: True

        Button:
            pos_hint: {"x": 0.4, "top": 0.6}
            size_hint: 0.1, 0.1
            text: "Submit"
            on_release:
                root.check()
                app.root.current = "login_screen"
                app.root.current = "main_screen" if root.flag == 1 else root.invalid()



# /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

# data display window
<DataWindow>:
    name: "data_screen"
    graph: graph
    on_enter:
        root.get_data()

    GridLayout:
        rows:2
        BoxLayout:
            id: graph

        FloatLayout:
            size_hint: 1, 0.3

            Button:
                pos_hint: {"x": 0.2, "top": 0.9}
                size_hint: 0.3, 0.4
                text: "Add a new measurement"
                on_release:
                    app.root.current = "addmeasurement_screen"
            Button:
                pos_hint: {"x": 0.2, "top": 0.5}
                size_hint: 0.3, 0.4
                text: "Edit measurements"
                on_release:
                    app.root.current = "edit_measurement_screen"

            Button:
                pos_hint: {"x": 0.5, "top": 0.9}
                size_hint: 0.3, 0.4
                text: "Edit patient's data"
                on_release:
                    app.root.current = "editpatient_screen"

            Button:
                pos_hint: {"x": 0.9}
                size_hint: 0.1, 0.2
                text: "Return"
                on_release:
                    app.root.current = "main_screen"

# /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

# main options window
<MainWindow>:
    name: "main_screen"

    user: user

    on_enter:
        root.update_userid()

    Button:
        pos_hint: {"x": 0.35, "top": 0.6}
        size_hint: 0.3, 0.1
        text: "Read the code"
        on_release:
            root.start_scan()
            app.root.current = "data_screen"

    Button:
        pos_hint: {"x": 0.35, "top": 0.4}
        size_hint: 0.3, 0.1
        text: "Register a new patient"
        on_release:
            app.root.current = "register_screen"

    Label:
        id: user
        pos_hint: {"x": 0.05, "top": 0.95}
        size_hint: 0.1, 0.05
        text: ""

    Button:
        pos_hint: {"x": 0.9}
        size_hint: 0.1, 0.05
        text: "Log out"
        on_release:
            app.root.current = "login_screen"

# /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

