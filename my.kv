# /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

# measurement deletion window
<Deletion_conf>:
    name: "deletion_conf_screen"
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "Are you sure you want to delete this item?"

    Button:
        size_hint: 0.3, 0.2
        pos_hint: {"x": 0.2, "top": 0.6}
        text: "Yes"
        on_release:
            root.conf_delete()
            app.root.current = "edit_measurement_screen"

    Button:
        size_hint: 0.3, 0.2
        pos_hint: {"x": 0.5, "top": 0.6}
        text: "No"
        on_release:
            app.root.current = "edit_measurement_screen"

# /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

# pop_up window classes
<Login_failed>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "The login or/and password are incorrect. Please try again."

<Register_failed>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "Unsufficient/incorrect data. Please try again."

<Register_success>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "Patient registered successfully"

<Add_failed>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "Unsufficient/incorrect data. Please try again."

<Add_success>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "Measurement added successfully."

<Edit_patient_success>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "Patient info updated successfully."

<Edit_patient_failed>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "You provided wrong/no data. Please try again."

<Connection_failed>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "Server connection unavailable. Try again later."

<Conf_del>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "Item deleted successfully."

<Edit_success>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "Item updates successfully."

<Edit_failed>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "You provided wrong/no data. Please try again."

<Must_select>:
    Label:
        size_hint: 0.3, 0.3
        pos_hint: {"x":0.35, "top": 0.9}
        text: "You must select a timestamp!"
